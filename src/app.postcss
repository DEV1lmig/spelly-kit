@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --gradient-start: rgba(0, 0, 0, 0.1);
  --gradient-end: transparent;
}

[data-theme="darkspelly"] {
  --gradient-start: rgba(255, 255, 255, 0.1);
  --gradient-end: transparent;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20px);
  }
}
